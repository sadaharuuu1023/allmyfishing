<div class="card">
  <%= link_to image_tag(tweet.image, class: :card__img ), tweet_path(tweet.id)%>
  <div class="card__body">
    <%= link_to tweet.title, tweet_path(tweet.id), class: :card__title%>
    <p class="card__summary">
      <%= tweet.text_field %>
    </p>
    <p class="card__summary">
      <%= tweet.text_water_depth %>
    </p>
    <p class="card__summary">
      <%= tweet.text_terrain %>
    </p>
    <p class="card__summary">
      <%= tweet.text_tide %>
    </p>
    <p class="card__summary">
      <%= tweet.text_rod %>
    </p>
    <p class="card__summary">
      <%= tweet.text_reel %>
    </p>
    <p class="card__summary">
      <%= tweet.text_line %>
    </p>
    <p class="card__summary">
      <%= tweet.text_leader %>
    </p>
    <p class="card__summary">
      <%= tweet.text_lure %>
    </p>
    <p class="card__summary">
      <%= tweet.text_color %>
    </p>
    <%= link_to "by #{tweet.user.name}", user_path(tweet.user.id), class: :card__user %>
    </div>
</div>

